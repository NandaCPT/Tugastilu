        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"/>

    <TextView
        android:text="Ketan Susu dengan perpaduan Es Krim diatasnya,
        dijamin bisa membuat lidah kamu meleleh saat memakannya,
        menjadikan menu ini sebagai andalan kami.Buruan cobain..."
        android:textStyle="bold"
        android:textSize="@dimen/text_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="84dp"
        android:layout_alignTop="@+id/list_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>